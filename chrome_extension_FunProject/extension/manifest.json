{
  "name": "Fact Check!",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Fact check what you're seeing on your web page",
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["https://www.facebook.com/*"]
  }],
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Check that!"
  },
  "permissions": [
    "activeTab"
  ]
}
